<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewdetailActivity"
    >
    <ImageView
        android:id="@+id/detailimage"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/viewdesc"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewArist"
        android:text="Description "
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/viewArist"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailimage"
        android:text="Artist "
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/viewPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewdesc"
        android:text="Price"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/viewPhone"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewPrice"
        android:text="Phone"
        android:textStyle="bold"/>

    <!-- <Button
        android:id="@+id/cartbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewPhone"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:text="Add To Cart" /> -->
    <Button
        android:id="@+id/buybtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewPhone"
        android:text="Buy Now"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        />

</RelativeLayout>